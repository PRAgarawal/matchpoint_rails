<table style="border-collapse:collapse;width:100%">
  <tbody>
  <tr>
    <th style="padding:8px;text-align:left;border-bottom:1px solid #ddd"></th>
    <th style="padding:8px;text-align:left;border-bottom:1px solid #ddd">Date</th>
    <th style="padding:8px;text-align:left;border-bottom:1px solid #ddd">Location</th>
    <th style="padding:8px;text-align:left;border-bottom:1px solid #ddd">Type</th>
    <th style="padding:8px;text-align:left;border-bottom:1px solid #ddd">Players</th>
  </tr>
  <% matches.each do |match| %>
    <tr>
      <!--TODO: Make this use the user's local time zone rather than hardcoding to central-->
      <td style="padding:8px;text-align: left;border-bottom: 1px solid #ddd;"><a href="<%= ENV['EXTERNAL_URL'] + (is_my_matches ? "/#/chats/#{match.chat.id}/" : '/#/match_requests?joinMatchId=') + match.id.to_s%>" class="btn-primary" itemprop="url" style="font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif; box-sizing: border-box; font-size: 14px; color: #FFF; text-decoration: none; line-height: 2em; font-weight: bold; text-align: center; cursor: pointer; display: inline-block; border-radius: 5px; text-transform: capitalize; background-color: #009933; margin: 10px 0; border-color: #009933; border-style: solid; border-width: 1px 2px; min-width: 36px;"><%= is_my_matches ? 'View' : 'Join'%></a></td>
      <td style="padding:8px;text-align:left;border-bottom:1px solid #ddd"><%= match.formatted_match_date %></td>
      <td style="padding:8px;text-align:left;border-bottom:1px solid #ddd"><%= match.court.name %></td>
      <td style="padding:8px;text-align:left;border-bottom:1px solid #ddd"><%= match.is_singles ? 'Singles' : 'Doubles' %></td>
      <td style="padding:8px;text-align:left;border-bottom:1px solid #ddd"><%= match.get_player_list %></td>
    </tr>
  <% end %>
  </tbody>
</table>
