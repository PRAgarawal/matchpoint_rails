<% content_for :css do %>
  <%= stylesheet_link_tag 'home' %>
<% end %>

<h3 class="home-header">Forgot your password?</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit "Submit password reset request", class: 'btn-sm-mpgreen' %>
  </div>
<% end %>

<div class="extra-links">
  <%= link_to 'Log in', new_session_path(resource_name), class: 'text-links' %>
  |
  <%= link_to 'Sign up', new_registration_path(resource_name), class: 'text-links' %>
</div>
